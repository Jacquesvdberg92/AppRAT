@model IEnumerable<AppRat.Models.AR_Target>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="data-panel">
        <div class="row">
            <div class="col-12 d-flex justify-content-between align-items-center mb-3">
                <h1 class="mb-0">Target Index</h1>
                <a asp-action="Create" class="btn btn-outline-theme p-1">Create New</a>
            </div>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    @* <th>
                        @Html.DisplayNameFor(model => model.UserId)
                    </th> *@
                    <th>
                        @Html.DisplayNameFor(model => model.New)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Used)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @* <td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td> *@
                        <td>
                            @Html.DisplayFor(modelItem => item.New)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Used)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td class="">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-theme p-1">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-theme p-1">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-theme p-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

