@model AppRat.Models.AR_Target
@using System.Security.Claims

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <form asp-action="Create">
        <div class="data-panel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="mb-0">Create Target</h3>
                <div>
                    <input type="submit" value="Create" class="btn btn-outline-theme p-1" />
                    <a asp-action="Index" class="btn btn-outline-theme p-1">Back to List</a>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-12">
                    <div class="overflow-container">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" style="display:none;">
                            <label asp-for="UserId" class="control-label"></label>
                            <input asp-for="UserId" class="form-control" value="@Model.UserId" />
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="New" class="control-label"></label>
                            <input asp-for="New" class="form-control" />
                            <span asp-validation-for="New" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Used" class="control-label"></label>
                            <input asp-for="Used" class="form-control" />
                            <span asp-validation-for="Used" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Date" class="control-label"></label>
                            <input asp-for="Date" class="form-control" type="month" value="@DateTime.Now.ToString("yyyy-MM")" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
