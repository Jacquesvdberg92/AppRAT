@model AppRat.ViewModels.EditUserRolesViewModel

@{
    ViewData["Title"] = "Edit User Roles";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="row">
                <div class="col-12 d-flex justify-content-between align-items-center mb-3">
                    <h1>Edit User Roles</h1>
                    <div>
                        <input type="submit" value="Save" class="btn btn-outline-theme p-1" />
                        <a asp-action="Index" class="btn btn-outline-theme p-1">Back to List</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" />
                    <div class="form-group">
                        <label asp-for="SelectedRoleId" class="control-label">Roles</label>
                        <select asp-for="SelectedRoleId" asp-items="Model.AllRoles" class="form-control"></select>
                        <span asp-validation-for="SelectedRoleId" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
